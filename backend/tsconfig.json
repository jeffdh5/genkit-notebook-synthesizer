{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "synthesis": ["../synthesis"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "references": [
    { "path": "../synthesis" }
  ]
}